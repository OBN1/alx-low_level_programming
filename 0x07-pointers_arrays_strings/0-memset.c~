#include <holberton.h>
/*File: 0-memset.c */
/**
 *  _memset - fills the first n bytes of the memory area pointed by s
 *  with the constant byte b
 *  @s: This is the pointer parameter of the memset function
 *  @n: Interger parameter to the number of bytes of a memory area
 *  @b: Parameter to be filled with the first n bytes of memory s
 *
 *  Return: Pointer to memory s
 *
 */

char *_memset(char *s, char b, unsigned int n)
{
  unsigned int i;

  for(i=0; i<n; i++)
    {
      *(s+i) = b;
    }

  return(s);
}

